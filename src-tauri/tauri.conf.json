{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "BizApp",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true
      },
      "dialog": {
        "all": true 
      },
      "fs": {
        "scope": ["$HOME/*"],
        "all": false, 
        "readFile": true,
        "writeFile": true,
        "readDir": false,
        "copyFile": false,
        "createDir": false,
        "removeDir": true,
        "removeFile": false,
        "renameFile": false,
        "exists": true
      }
    },
    "bundle": {
      "active": false,
      "identifier": "fr.aumjaud",
      "icon": [ "icons/icon.ico" ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "BizApp",
        "width": 800,
        "height": 600
      }
    ]
  }
}
